<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Review text</th>
      <th>Author</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_text %></td>
        <td><%= review.author %></td>
        <td><%= review.latitude %></td>
        <td><%= review.longitude %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag(reviews_path, method: :get) do %>
  <%= text_field_tag :latitude %>
  <%= text_field_tag :longitude %>
  <%= submit_tag 'Search' %>
<% end %>

<%= link_to 'New Review', new_review_path %>
